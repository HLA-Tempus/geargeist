{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@libs/*": ["src/libs/*"],
            "@pages/*": ["src/pages/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
